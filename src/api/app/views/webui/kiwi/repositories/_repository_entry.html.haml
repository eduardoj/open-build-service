.repository-container{ style: "margin-bottom: 1.5em" }
  %div{ style: "margin-left: 15px" }
    %strong
      = link_to(repository.name, repository.source_path)
    %i (#{repo_type_and_priority(repository)})
  %div{ style: "margin-left: 30px" }
    %div{ style: "margin: 5px" }
      - if repository.username.present?
        %strong User:
        = repository.username
      - if repository.password.present?
        - if repository.username
          |
        %strong Password:
        = repository.password
    %div
      = check_box "repository-#{repository.order}", 'prefer_license',
        { checked: repository.prefer_license, disabled: true }
      = label "repository-#{repository.order}", 'prefer_license',
        'Prefer license'
      = check_box "repository-#{repository.order}", 'imageinclude',
        { checked: repository.imageinclude, disabled: true }
      = label "repository-#{repository.order}", 'imageinclude', 'Image include'
      = check_box "repository-#{repository.order}", 'replaceable',
        { checked: repository.replaceable, disabled: true }
      = label "repository-#{repository.order}", 'replaceable', 'Replaceable'
